<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tinkoff"/>
    <style name="Tinkoff.Header">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Tinkoff.Subheader">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Tinkoff.Regular">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Tinkoff.Medium">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Tinkoff.Regular16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Tinkoff.Regular13">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Tinkoff.Button">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="minHeight">44dp</item>
        <item name="textAppearanceButton">@style/Tinkoff.Header</item>
        <item name="android:background">@drawable/button_round</item>
    </style>
</resources>